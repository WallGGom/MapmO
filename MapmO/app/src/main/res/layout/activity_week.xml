<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".MemoWeekActivity">

    <LinearLayout
        android:id="@+id/activityWeek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="616dp"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="90dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/logo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/space_temp"/>

            <Space
                android:id="@+id/space_temp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/imageView3"
                app:layout_constraintRight_toLeftOf="@id/week_to_day"/>

            <Button
                android:id="@+id/week_to_day"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="Day"
                android:textSize="13sp"
                app:backgroundTint="#00FFFFFF"
                app:layout_constraintLeft_toRightOf="@id/space_temp"
                app:layout_constraintRight_toLeftOf="@id/week_to_week"/>

            <Button
                android:id="@+id/week_to_week"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="Week"
                android:textSize="13sp"
                app:backgroundTint="#008080"
                app:layout_constraintLeft_toRightOf="@id/week_to_day"
                app:layout_constraintRight_toLeftOf="@id/week_to_month"/>

            <Button
                android:id="@+id/week_to_month"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:backgroundTint="#00FFFFFF "
                android:text="Month"
                android:textSize="13sp"
                app:layout_constraintLeft_toRightOf="@id/week_to_week"
                app:layout_constraintRight_toRightOf="parent"/>
        </TableRow>


        <!--        <Button-->
        <!--            android:id="@+id/btn_week_to_day"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="일"-->
        <!--            app:backgroundTint="#F44336" />-->

        <!--        <Button-->
        <!--            android:id="@+id/btn_week_to_month"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="월"-->
        <!--            app:backgroundTint="#4CAF50" />-->

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/week_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activityWeek">
        <Button
            android:id="@+id/previous_week"
            android:layout_width="39dp"
            android:layout_height="34dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/leftarrow"
            app:backgroundTint="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <Button
            android:id="@+id/next_week"
            android:layout_width="39dp"
            android:layout_height="34dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rightarrow"
            app:backgroundTint="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/what_week"
        android:layout_width="148dp"
        android:layout_height="30dp"
        android:layout_marginStart="187dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="월"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/daysLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityMonth" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/daysLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        app:layout_constraintTop_toBottomOf="@id/week_control">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sunTxtView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="일"
            android:textColor="#FF6347"
            android:textSize="20sp"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintEnd_toStartOf="@+id/monTxtView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/monTxtView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="월"
            android:textColor="#080808"
            android:textSize="20sp"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintEnd_toStartOf="@+id/tueTxtView"
            app:layout_constraintStart_toEndOf="@+id/sunTxtView"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tueTxtView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="화"
            android:textColor="#080808"
            android:textSize="20sp"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintEnd_toStartOf="@+id/wedTxtView"
            app:layout_constraintStart_toEndOf="@+id/monTxtView"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/wedTxtView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="수"
            android:textColor="#080808"
            android:textSize="20sp"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintEnd_toStartOf="@+id/thuTxtView"
            app:layout_constraintStart_toEndOf="@+id/tueTxtView"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/thuTxtView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="목"
            android:textColor="#080808"
            android:textSize="20sp"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintEnd_toStartOf="@+id/friTxtView"
            app:layout_constraintStart_toEndOf="@+id/wedTxtView"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/friTxtView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="금"
            android:textColor="#080808"
            android:textSize="20sp"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintEnd_toStartOf="@+id/satTxtView"
            app:layout_constraintStart_toEndOf="@+id/thuTxtView"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/satTxtView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="토"
            android:textColor="#0000CD"
            android:textSize="20sp"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/friTxtView"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/re_week_date"
        android:name="com.example.mapmo.FragmentWeekDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daysLayout"
        />


