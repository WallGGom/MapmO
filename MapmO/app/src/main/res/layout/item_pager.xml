<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/memo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textStyle="bold"
        tools:text="Page 1" />

    <TextView
        android:id="@+id/memo_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textStyle="bold"
        tools:text="Page 1" />

    <TextView
        android:id="@+id/memo_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textStyle="bold"
        tools:text="Page 1" />

    <TextView
        android:id="@+id/memo_create_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textStyle="bold"
        tools:text="Page 1" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rowPlanDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="일정 날짜 및 시간 : "
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/memo_alarm_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="21sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="Page 1" />

        <TextView
            android:id="@+id/memo_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="21sp"
            android:textStyle="bold"
            tools:text="Page 1" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rowAlarmCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림 설정 여부 : "
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/memo_alarm_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page1"
            android:textSize="21sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rowAlarmSettime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림 설정 시간 : "
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/memo_alarm_settime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page1"
            android:textSize="21sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="32dp"
            android:text="삭제" />
    </TableRow>

</LinearLayout>